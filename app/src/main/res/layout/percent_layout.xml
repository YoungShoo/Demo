<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shoo.demo.percent.SPercentFrameLayout
        android:id="@+id/pfl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutWidthPercent="80%"
            app:layoutHeightPercent="40%"
            android:background="@android:color/darker_gray"
            android:gravity="bottom"
            android:text="width: 80%, height: 40%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutWidthPercent="50%"
            app:layoutHeightPercent="20%"
            android:background="@android:color/holo_red_light"
            android:gravity="bottom"
            android:text="width: 50%, height: 20%" />

    </com.shoo.demo.percent.SPercentFrameLayout>

    <com.shoo.demo.percent.SPercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutWidthPercent="50%"
            app:layoutHeightPercent="30%"
            android:background="@android:color/holo_green_light"
            android:gravity="bottom"
            android:text="width: 50%, height: 30%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutWidthPercent="80%"
            app:layoutHeightPercent="50%"
            android:background="@android:color/holo_blue_light"
            android:gravity="bottom"
            android:text="width: 80%, height: 50%"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark"
            android:gravity="bottom"
            android:text="width: match_parent, height: match_parent"/>


    </com.shoo.demo.percent.SPercentLinearLayout>

</LinearLayout>